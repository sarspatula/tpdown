# Enable mod_rewrite
RewriteEngine On
RewriteBase /

# Redirect all paths to the root URL
RewriteCond %{REQUEST_URI} !^/$
RewriteRule ^.*$ / [L,R=301]

# Additional settings (optional)
# Prevent directory listing if directory has no index file
Options -Indexes

# Block access to .htaccess itself for security
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Redirect all HTTP traffic to HTTPS (optional if using SSL)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
